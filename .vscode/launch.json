
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "15"
            }
        },
        {
            "name": "Python Console",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "shell",
                "-c",
                "import os, sys, importlib.util; import django; os.environ.setdefault(\"DJANGO_SETTINGS_MODULE\", \"BaseDRFApp.settings\"); django.setup(); path = os.path.join('${workspaceFolder}', '.vscode', 'django_console.py'); spec = importlib.util.spec_from_file_location('python_console', path); python_console = importlib.util.module_from_spec(spec); spec.loader.exec_module(python_console);"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "DJANGO_SETTINGS_MODULE": "BaseDRFApp.settings",
                "PYTHONUNBUFFERED": "1",
                "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "15"
            }
        }
    ]
}